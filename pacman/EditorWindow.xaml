<Window x:Class="pacman.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pacman"
        mc:Ignorable="d"
        Title="Level Editor" Height="450" Width="800">
    <Grid>
        <local:EditorCanvas x:Name="scene" RenderOptions.EdgeMode="Aliased" RenderOptions.BitmapScalingMode="NearestNeighbor"
                            MouseDown="scene_MouseDown" MouseUp="scene_MouseUp" MouseMove="scene_MouseMove" MouseWheel="scene_MouseWheel"/>
    </Grid>
</Window>
