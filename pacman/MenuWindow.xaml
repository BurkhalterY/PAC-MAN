<Window x:Class="pacman.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pacman"
        mc:Ignorable="d"
        Title="Menu principale - Bienvenue !" Height="450" Width="800">
    <Grid Background="Black">
        <Button Content="Debug" Margin="0,140,0,0" Height="60" VerticalAlignment="Top" FontFamily="/pacman;component/Fonts/#ArcadeClassic" FontSize="36" Foreground="White" Background="Transparent" BorderBrush="Transparent" Click="BtnDebug" />
        <Button Content="1 Player" Margin="0,200,0,0" Height="60" VerticalAlignment="Top" FontFamily="/pacman;component/Fonts/#ArcadeClassic" FontSize="36" Foreground="White" Background="Transparent" BorderBrush="Transparent" Click="Btn1Player" />
        <Button Content="Editor" Margin="0,260,0,0" Height="60" VerticalAlignment="Top" FontFamily="/pacman;component/Fonts/#ArcadeClassic" FontSize="36" Foreground="White" Background="Transparent" BorderBrush="Transparent" Click="BtnEditor" />
    </Grid>
</Window>
